<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <% if(order.length > 0){ %>
            <ul class="cart__item-list">
            
                <li class="cart__item">
            
                    <h1>Product Name</h1>
                    <h2>Quantity</h2>
                    <h2>Price</h2>
                    <h2>Item Total</h2>
                </li>
            </ul>
    <ul class="cart__item-list">

        <% for (let product of order){ %>
        <li class="cart__item">

            <h1><%= product.title %> </h1>
            <h2><%= product['orderItem'].quantity %> </h2>
            <h2><%= product.price %> </h2>
            <h2><%= product['orderItem'].quantity* product.price%> </h2>
        </li>
        <% } %>
    </ul>
    <h1>Total Price: <%= totalPrice%></h1>
    <form action='/admin/cancel-order' method="POST" class="clear-cart">
        <button type='submit' class=" btn danger">Cancel Order</button>
    </form>
    <form action='/admin/checkout' method='POST' class="clear-cart">
        <input type='hidden' name='totalPrice' value=<%= totalPrice %>>
        <button type='submit' class=" btn">Checkout</button>
    </form>
    <% }else{ %>
    <h1>No Product in Order</h1>
    <% } %>
    <%- include('../includes/end.ejs') %>